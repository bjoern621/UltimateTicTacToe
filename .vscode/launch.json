{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "suppressMultipleSessionWarning": true
        },
        {
            "name": "Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "justMyCode": false,
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": ["--tb=short", "--disable-warnings"]
        },
        {
            "name": "KNN Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/knn/train.py",
            "suppressMultipleSessionWarning": true,
            "args": ["boards_dataset.csv"]
        },
        {
            "name": "KNN Predict",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/knn/predict.py",
            "suppressMultipleSessionWarning": true,
            "args": ["boards_dataset.csv", "utt_model.pth"]
        }
    ]
}
